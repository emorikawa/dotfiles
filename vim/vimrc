match LineTooLong /\%>74v.\+/

" Autocommands "
"""""""""""""""
autocmd! bufwritepost vimrc source ~/.vimrc "When vimrc is edited, reload it
autocmd BufWrite *.py :call DeleteTrailingWS() "Deletes trailing whitepace

" Mixes in html filetype to web languages
au BufRead,BufNewFile *.php set ft=php.html
au BufRead,BufNewFile *.erb set ft=eruby.html
au BufRead,BufNewFile *.coffee set ft=coffee.html

" Utility Methods "
""""""""""""""""""
function! CurDir()
  let curdir = substitute(getcwd(), '/Users/amir/', "~/", "g")
  return curdir
endfunction

function! HasPaste()
  if &paste
    return 'PASTE MODE  '
  else
    return ''
  endif
endfunction

function! DeleteTrailingWS()
  exe "normal mz"
  %s/\s\+$//ge
  exe "normal `z"
endfunc

function! CmdLine(str)
  exe "menu Foo.Bar :" . a:str
  emenu Foo.Bar
  unmenu Foo
endfunction

function! VisualSearch(direction) range
  let l:saved_reg = @"
  execute "normal! vgvy"

  let l:pattern = escape(@", '\\/.*$^~[]')
  let l:pattern = substitute(l:pattern, "\n$", "", "")

  if a:direction == 'b'
    execute "normal ?" . l:pattern . "^M"
  elseif a:direction == 'gv'
    call CmdLine("vimgrep " . '/'. l:pattern . '/' . ' **/*.')
  elseif a:direction == 'f'
    execute "normal /" . l:pattern . "^M"
  endif

  let @/ = l:pattern
  let @" = l:saved_reg
endfunction



